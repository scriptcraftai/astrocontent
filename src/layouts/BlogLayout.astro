---
import BaseLayout from './BaseLayout.astro';
import RecommendedWorkflows from '@/components/RecommendedWorkflows.astro';
import { formatDate } from '@/utils/seo';

export interface Props {
  frontmatter: {
    title: string;
    description: string;
    date: string;
    tags: string[];
    workflowType: string;
    image?: string;
  };
}

const { frontmatter } = Astro.props;
const schema = {
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": frontmatter.title,
  "description": frontmatter.description,
  "datePublished": frontmatter.date,
  "dateModified": frontmatter.date,
  "author": {
    "@type": "Organization",
    "name": "Automation Hub"
  },
  "publisher": {
    "@type": "Organization",
    "name": "Automation Hub"
  }
};
---

<BaseLayout 
  title={frontmatter.title}
  description={frontmatter.description}
  image={frontmatter.image}
  type="article"
  schema={schema}
>
  <article class="max-w-4xl mx-auto px-4 py-8">
    <header class="mb-8">
      <h1 class="text-4xl font-bold mb-4">{frontmatter.title}</h1>
      <div class="flex flex-wrap items-center gap-4 text-gray-600 mb-4">
        <time datetime={frontmatter.date}>
          {formatDate(new Date(frontmatter.date))}
        </time>
        <span class="px-3 py-1 bg-blue-100 text-blue-800 rounded-full text-sm">
          {frontmatter.workflowType}
        </span>
      </div>
      <div class="flex flex-wrap gap-2">
        {frontmatter.tags.map(tag => (
          <span class="px-2 py-1 bg-gray-200 text-gray-700 rounded text-sm">
            #{tag}
          </span>
        ))}
      </div>
    </header>
    
    <div class="prose prose-lg max-w-none">
      <slot />
    </div>
    
    <RecommendedWorkflows workflowType={frontmatter.workflowType} currentSlug={Astro.url.pathname} />
  </article>
</BaseLayout>
