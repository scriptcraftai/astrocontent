---
import BaseLayout from '@/layouts/BaseLayout.astro';
import ToolCard from '@/components/ToolCard.astro';

const tools = [
  {
    title: 'Home Renovation Cost Calculator',
    description: 'Calculate renovation costs with detailed breakdowns for materials, labor, and additional expenses. Get accurate estimates for your next project.',
    href: '/tools/calculator',
    category: 'Finance & Planning',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/></svg>'
  },
  {
    title: 'CSS Box-Shadow Generator',
    description: 'Create beautiful CSS box-shadows with live preview. Adjust offset, blur, spread, and color with real-time updates and copy-to-clipboard functionality.',
    href: '/tools/box-shadow',
    category: 'Web Development',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>'
  },
  {
    title: 'PNG to JPG Converter',
    description: 'Convert PNG images to JPG format privately in your browser. No upload required - all processing happens on your device for maximum privacy.',
    href: '/tools/converter/png-to-jpg',
    category: 'File Conversion',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/></svg>'
  },
  {
    title: 'Word to PDF Converter',
    description: 'Convert Microsoft Word documents to PDF format entirely in your browser. Secure, private, and no file size limits.',
    href: '/tools/converter/word-to-pdf',
    category: 'File Conversion',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/></svg>'
  }
];
---

<BaseLayout 
  title="Free Online Tools - Calculators, Converters & Generators"
  description="Free online tools including home renovation calculator, CSS box-shadow generator, and private file converters. All tools run in your browser for maximum privacy and security."
>
  <div class="max-w-6xl mx-auto px-4 py-12">
    <header class="text-center mb-16">
      <h1 class="text-4xl font-bold text-gray-900 mb-4">Free Online Tools</h1>
      <p class="text-xl text-gray-600 max-w-2xl mx-auto">
        Powerful, privacy-focused tools that run entirely in your browser. No registration required, no data tracking.
      </p>
    </header>
    
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-12">
      {tools.map(tool => (
        <ToolCard
          title={tool.title}
          description={tool.description}
          href={tool.href}
          category={tool.category}
          icon={tool.icon}
        />
      ))}
    </div>
    
    <section class="bg-blue-50 rounded-lg p-8 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Why Use Our Tools?</h2>
      <div class="grid md:grid-cols-3 gap-6 text-left">
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">ðŸ”’ Privacy First</h3>
          <p class="text-gray-600">All processing happens in your browser. Your files never leave your device.</p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">âš¡ Lightning Fast</h3>
          <p class="text-gray-600">No server uploads or downloads. Get instant results with optimized performance.</p>
        </div>
        <div>
          <h3 class="font-semibold text-gray-900 mb-2">ðŸ†“ Completely Free</h3>
          <p class="text-gray-600">No limits, no registration, no hidden fees. Use all tools without restrictions.</p>
        </div>
      </div>
    </section>
  </div>
</BaseLayout>
