---
import BaseLayout from '@/layouts/BaseLayout.astro';
import BlogCard from '@/components/BlogCard.astro';
import ToolCard from '@/components/ToolCard.astro';
import { getCollection } from 'astro:content';

const blogPosts = (await getCollection('blog'))
  .sort((a, b) => new Date(b.data.date).getTime() - new Date(a.data.date).getTime())
  .slice(0, 6);

const tools = [
  {
    title: 'Home Renovation Calculator',
    description: 'Calculate renovation costs with detailed breakdowns for materials and labor.',
    href: '/tools/calculator',
    category: 'Finance',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M19 3H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zM9 17H7v-7h2v7zm4 0h-2V7h2v10zm4 0h-2v-4h2v4z"/></svg>'
  },
  {
    title: 'CSS Box-Shadow Generator',
    description: 'Create beautiful CSS box-shadows with live preview and copy-to-clipboard.',
    href: '/tools/box-shadow',
    category: 'Development',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"/></svg>'
  },
  {
    title: 'PNG to JPG Converter',
    description: 'Convert images privately in your browser. No upload required.',
    href: '/tools/converter/png-to-jpg',
    category: 'File Conversion',
    icon: '<svg class="w-6 h-6 text-blue-600" fill="currentColor" viewBox="0 0 24 24"><path d="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"/></svg>'
  }
];
---

<BaseLayout 
  title="Automation Hub - Workflows & Tools for Modern Productivity"
  description="Discover automation workflows and free tools to boost your productivity. Learn Zapier, home automation, and use our calculators, converters, and generators."
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-20">
    <div class="max-w-6xl mx-auto px-4 text-center">
      <h1 class="text-5xl font-bold text-gray-900 mb-6">
        Automate Your <span class="text-blue-600">Workflows</span>
      </h1>
      <p class="text-xl text-gray-600 mb-8 max-w-2xl mx-auto">
        Discover powerful automation strategies and use our free tools to streamline your processes and boost productivity.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="/blog" class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium">
          Explore Workflows
        </a>
        <a href="/tools" class="px-8 py-3 border-2 border-blue-600 text-blue-600 rounded-lg hover:bg-blue-50 transition-colors font-medium">
          Try Our Tools
        </a>
      </div>
    </div>
  </section>

  <!-- Latest Blog Posts -->
  <section class="py-16">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Latest Automation Workflows</h2>
        <p class="text-xl text-gray-600">Learn how to automate your business and personal tasks</p>
      </div>
      
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 mb-8">
        {blogPosts.map(post => (
          <BlogCard
            title={post.data.title}
            description={post.data.description}
            date={post.data.date}
            slug={post.slug}
            workflowType={post.data.workflowType}
            tags={post.data.tags}
          />
        ))}
      </div>
      
      <div class="text-center">
        <a href="/blog" class="inline-flex items-center px-6 py-3 border border-gray-300 rounded-lg text-gray-700 hover:bg-gray-50 transition-colors">
          View All Posts
          <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- Featured Tools -->
  <section class="py-16 bg-gray-50">
    <div class="max-w-6xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Free Productivity Tools</h2>
        <p class="text-xl text-gray-600">Powerful tools that work entirely in your browser</p>
      </div>
      
      <div class="grid md:grid-cols-3 gap-8 mb-8">
        {tools.map(tool => (
          <ToolCard
            title={tool.title}
            description={tool.description}
            href={tool.href}
            category={tool.category}
            icon={tool.icon}
          />
        ))}
      </div>
      
      <div class="text-center">
        <a href="/tools" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors">
          Explore All Tools
          <svg class="w-4 h-4 ml-2" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
          </svg>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-16">
    <div class="max-w-4xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Automate Your Workflow?</h2>
      <p class="text-xl text-gray-600 mb-8">
        Join thousands of professionals who have streamlined their processes with our guides and tools.
      </p>
      <a href="/blog" class="px-8 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors font-medium text-lg">
        Start Learning Now
      </a>
    </div>
  </section>
</BaseLayout>
